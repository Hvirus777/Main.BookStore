@using Microsoft.Extensions.Configuration

@inject IConfiguration _configuration
@inject Microsoft.Extensions.Options.IOptionsSnapshot<NewBookAlertConfig> _newBookAlertConfiguration
 
    @{
        var newBookAlertConfiguration = _newBookAlertConfiguration.Value;
    }

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">

                @* Performance increases,
                if image source is changed then it will automatically clear browser cache and gets new updated image on client browser
                only works on same server
                do not work if site is hosted on different server like azure *@
                <img src="~/images/logo.png" width="30" height="30" asp-append-version="true" />
                @_configuration["AppName"]
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-outline-primary">Login</a>
                        <a class="btn btn-primary" asp-controller="Account" asp-action="Signup">Register</a>
                    </li>
                </ul>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="ContactUs">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Book" asp-action="GetAllBooks">All Books</a>
                    </li>

                    @*Pass complete URL in anchor tag*@
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-protocol="http" asp-host="google.com">New Link</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Book" asp-action="AddNewBook">Add New Book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>



@if (newBookAlertConfiguration.Key1)
{
    <div class="alert alert-info" role="alert">
        @(newBookAlertConfiguration.BookName)
    </div>
}

